# Stock Prediction Dashboard - Backend Configuration
# Copy this file to .env and fill in your API keys

# Application Settings
APP_NAME=Stock Prediction Dashboard API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# API Keys - Required for production
METALS_API_KEY=your_metals_api_key_here
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here
COINGECKO_API_KEY=

# Redis Configuration (optional - will use in-memory cache if not available)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false
CACHE_TTL=300

# ML Model Paths
MODEL_BASE_PATH=ml-models/saved_models
STOCK_MODEL_PATH=ml-models/saved_models/stock_lstm.h5
CRYPTO_MODEL_PATH=ml-models/saved_models/crypto_lstm.h5

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console

# Market Settings
DEFAULT_MARKET=NSE
MARKET_TIMEZONE=Asia/Kolkata
